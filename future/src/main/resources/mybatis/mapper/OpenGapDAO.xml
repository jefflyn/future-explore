<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.guru.future.mapper.OpenGapDAO">
    <resultMap id="BaseResultMap" type="com.guru.future.domain.OpenGapDO">
        <result column="trade_date" jdbcType="VARCHAR" property="tradeDate"/>
        <result column="code" jdbcType="VARCHAR" property="code"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="category" jdbcType="VARCHAR" property="category"/>
        <result column="pre_close" jdbcType="DECIMAL" property="preClose"/>
        <result column="open" jdbcType="DECIMAL" property="open"/>
        <result column="gap_rate" jdbcType="DECIMAL" property="gapRate"/>
        <result column="day_gap" jdbcType="BOOLEAN" property="dayGap"/>
        <result column="remark" jdbcType="VARCHAR" property="remark"/>
        <result column="buy_low" jdbcType="DECIMAL" property="buyLow"/>
        <result column="sell_high" jdbcType="DECIMAL" property="sellHigh"/>
    </resultMap>

    <insert id="insertBatch" parameterType="list">
        insert into open_gap
        (trade_date, code, name, category, pre_close, pre_high, pre_low, open, gap_rate, day_gap, remark, buy_low, sell_high)
        values
        <foreach collection="list" item="obj" index="index" separator=",">
            (
            #{obj.tradeDate}, #{obj.code}, #{obj.name}, #{obj.category}, #{obj.preClose}, #{obj.preHigh}, #{obj.preLow},
            #{obj.open}, #{obj.gapRate}, #{obj.dayGap}, #{obj.remark}, #{obj.buyLow}, #{obj.sellHigh}
            )
        </foreach>
    </insert>

    <insert id="insertSelective" parameterType="com.guru.future.domain.OpenGapDO">
        insert into open_gap
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="tradeDate != null">
                trade_date,
            </if>
            <if test="code != null">
                code,
            </if>
            <if test="name != null">
                `name`,
            </if>
            <if test="category != null">
                category,
            </if>
            <if test="preClose != null">
                pre_close,
            </if>
            <if test="preHigh != null">
                pre_high,
            </if>
            <if test="preLow != null">
                pre_low,
            </if>
            <if test="open != null">
                `open`,
            </if>
            <if test="gapRate != null">
                gap_rate,
            </if>
            <if test="dayGap != null">
                day_gap,
            </if>
            <if test="remark != null">
                remark,
            </if>
            <if test="buyLow != null">
                buy_low,
            </if>
            <if test="sellHigh != null">
                sell_high,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="tradeDate != null">
                #{tradeDate,jdbcType=VARCHAR},
            </if>
            <if test="code != null">
                #{code,jdbcType=VARCHAR},
            </if>
            <if test="name != null">
                #{name,jdbcType=VARCHAR},
            </if>
            <if test="category != null">
                #{category,jdbcType=VARCHAR},
            </if>
            <if test="preClose != null">
                #{preClose,jdbcType=DECIMAL},
            </if>
            <if test="preHigh != null">
                #{preHigh,jdbcType=DECIMAL},
            </if>
            <if test="preLow != null">
                #{preLow,jdbcType=DECIMAL},
            </if>
            <if test="open != null">
                #{open,jdbcType=DECIMAL},
            </if>
            <if test="gapRate != null">
                #{gapRate,jdbcType=DECIMAL},
            </if>
            <if test="dayGap != null">
                #{dayGap,jdbcType=BOOLEAN},
            </if>
            <if test="remark != null">
                #{remark,jdbcType=VARCHAR},
            </if>
            <if test="buyLow != null">
                #{buyLow,jdbcType=DECIMAL},
            </if>
            <if test="sellHigh != null">
                #{sellHigh,jdbcType=DECIMAL},
            </if>
        </trim>
    </insert>

    <select id="selectByCurrentDate" resultMap="BaseResultMap">
        select * from open_gap where trade_date = CURDATE();
    </select>
</mapper>